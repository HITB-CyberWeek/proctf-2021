html
  head
    title= 'P0ck37'
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', crossorigin='anonymous')

  body
    div(class='container')
      nav(class='navbar navbar-expand-lg navbar-light bg-light')
        div(class='container-fluid')
          a(class='navbar-brand', href='#') P0ck37
          div(class='navbar-collapse collapse')
            ul(class='navbar-nav ms-auto')
              li(class='nav-item')
                button(type='button', class='btn btn-outline-success btn-sm', data-bs-toggle="modal", data-bs-target="#addLinkModal") +
                span
                  | 
                  |#{user}
                  | |
                  | 
                  a(href='/logout') Logout

      ul(class='list-group list-group-flush')
        each file in files
          li(class='list-group-item')
            a(href=`/download/${file}`)= file.split('.').slice(0, -1).join('.')

      div(id='addLinkModal', class='modal fade', tabindex="-1", aria-labelledby="modalLabel", aria-hidden="true")
        div(class='modal-dialog')
          div(class='modal-content')
            form(action='/add', method='GET')
              div(class='modal-header')
                h5(class='modal-title', id='modalLabel') Add link
                button(type='button', class='btn-close', data-bs-dismiss="modal", aria-label="Close")
              div(class="modal-body")
                  input(type="text", class="form-control" name="link")
              div(class="modal-footer")
                button(type="button", class="btn btn-secondary", data-bs-dismiss="modal") Close
                button(type="submit" class="btn btn-primary") Add
